{
  "version": "0.2.2",
  "name": "valheim-plus-installer",
  "productName": "Valheim Plus Installer",
  "description": "Valheim Plus Installer",
  "copyright": "",
  "main": "public/electron.js",
  "repository": "https://github.com/dyoung522/valheim-plus-installer",
  "homepage": "./",
  "keywords": [
    "valheim",
    "plus",
    "valheim+",
    "valheimplus"
  ],
  "private": true,
  "author": {
    "name": "Donovan C. Young",
    "email": "Donovan.C.Young@gmail.com",
    "url": "https://donovanyoung.com"
  },
  "build": {
    "appId": "com.valheimplus.installer",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "publish": [
      {
        "provider": "github"
      }
    ],
    "win": {
      "publish": [
        "github"
      ],
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "verifyUpdateCodeSignature": false
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "build"
    }
  },
  "scripts": {
    "dev": "concurrently -k \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron --inspect .\"",
    "start": "rescripts start",
    "build": "rescripts build",
    "test": "react-scripts test --modulePaths=src",
    "test-coverage": "react-scripts test --modulePaths=src --coverage",
    "dist": "yarn build; electron-builder -w",
    "pack": "electron-builder -w --dir",
    "release": "yarn build; electron-builder -w -p 'onTagOrDraft'",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "yarn build",
    "lint": "eslint src --ext .ts --ext .tsx"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "quokka": {
    "env": {
      "params": {
        "env": "NODE_PATH=./src"
      }
    },
    "babel": {
      "ts": true,
      "presets": [
        "react-app"
      ]
    },
    "plugins": [
      "jsdom-quokka-plugin"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "^@src/(.*)$": "<rootDir>/src/$1"
    }
  },
  "dependencies": {
    "@material-ui/core": "^4.5.1",
    "@material-ui/icons": "^4.5.1",
    "@octokit/rest": "^18.2.0",
    "decompress-zip": "^0.3.3",
    "electron-debug": "^3.0.1",
    "electron-dl": "^3.1.0",
    "electron-is-dev": "^1.2.0",
    "electron-log": "^4.0.4",
    "electron-store": "^7.0.2",
    "electron-unhandled": "^3.0.1",
    "electron-updater": "^4.2.0",
    "electron-util": "^0.14.2",
    "electron-window-state": "^5.0.3",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-jss": "^10.5.1"
  },
  "devDependencies": {
    "@hot-loader/react-dom": "^16.11.0",
    "@rescripts/cli": "^0.0.16",
    "@rescripts/rescript-env": "^0.0.12",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@types/jest": "^26.0.20",
    "@types/mock-fs": "^4.10.0",
    "@types/node": "^14.14.31",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "concurrently": "^5.0.0",
    "cross-env": "^7.0.3",
    "electron": "^11.2.3",
    "electron-builder": "^22.9.1",
    "eslint": "^7.20.0",
    "jest": "26.6.0",
    "react-app-rewire-hot-loader": "^2.0.1",
    "react-app-rewired": "^2.1.5",
    "react-hot-loader": "^4.12.18",
    "react-scripts": "4.0.2",
    "react-test-renderer": "^16.12.0",
    "ts-jest": "^26.5.1",
    "tslint": "^6.1.3",
    "typescript": "^4.1.5",
    "wait-on": "^5.2.1",
    "whatwg-fetch": "^3.0.0"
  }
}
